# This is an example .env file. Copy this to .env and modify as needed.

# ====== DATABASE CONFIGURATION ======
# For VS Code development (local PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ctx_software

# For production (Neon PostgreSQL via Vercel)
# DATABASE_URL=postgresql://user:password@host:port/database

# ====== ENVIRONMENT SETTINGS ======
# Use 'development' for local VS Code development
NODE_ENV=development

# Use 'production' for Vercel deployment
# NODE_ENV=production

# ====== APPLICATION SETTINGS ======
# Session secret for Express sessions (change this to a random value)
SESSION_SECRET=example-session-secret-change-me

# ====== PORT SETTINGS ======
# Optionally set a specific port
PORT=5000

# ====== DEVELOPMENT SETTINGS ======
# Enable detailed logging during development
DEBUG=true

# ====== VERCEL SPECIFIC ======
# These variables are automatically set by Vercel in production
# VERCEL=1
# VERCEL_URL=your-project.vercel.app