{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --platform=linux --arch=x64",
  "functions": {
    "api/**/*": {
      "runtime": "nodejs22.x"
    },
    "server/vercel.js": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/vercel.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "server/vercel.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}